doctype html
html(lang='en')
    include ../common/head.pug
    +head("Login to Starter MVP")
    body
        header
            include ../common/navbar.pug
            +navbar()
            .container
                .row
                    .col-sm-12.offset-md-2.col-md-8
                        .jumbotron
                            h2.text-center Login
                            .row
                                .col-sm-12.col-md-12.col-xs-12
                                    form(action='/login', method='POST')
                                        div.formgroup
                                            label.small.md-1.mt-3 Email:
                                            input(placeholder='Please enter your email', required=true, name='email', type='email', value=formData.email).form-control
                                            label.small.md-1.mt-3 Password:
                                            input(placeholder='Please enter your password', required=true, name='password', type='password', value='').form-control
                                            if(errors)
                                                p.small.text-danger #{errors.msg}
                                            button.mt-3.btn.btn-primary(type='submit') Log In
                                            p.mt-2.mb-0
                                                | Forget your password? #[a(href="#") Reset here].
                                            p.m-0
                                                | Don't have an account? #[a(href="/signup") Sign up here].
        include ../common/footer.pug
        +footer()
